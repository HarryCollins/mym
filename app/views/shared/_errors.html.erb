
<% if obj.errors.any? %>

  <div class="container">
    <div class="row">
      <div class="alert alert-danger col-md-8 col-md-offset-2">
        <div class="error_messages col-sm-11">
          <!-- <h5>Please correct the following errors</h5> -->
          <% obj.errors.full_messages.each do |error| %>
            <ul>
              <li><%= error %></li>
            </ul>
          <% end %>
        </div>
          
        <div class="col-sm-1">
          <a href="">
            <span class="glyphicon glyphicon-remove dismiss-error-message"></span>
          </a>
        </div>
      </div>
    </div>
  </div>
  
<% end %>