<div class= "container">
    <div class="row">
        <div class= "well col-md-8">

            <h1><%= @market.name %> </br>
            <small><%= @market.description %></h1></small>
            <h5>Market Type: <%= @market.market_type.mechanism %></h5></br>


            <h4>Outcomes</h4><hr>
            <h4>
                <div class="col-md-offset-7">
                    Back | Lay
                </div>
            </h4>
            <% @market.market_outcomes.each do |oc| %>
                <ul class="list-group">
                    <li class="no-bullets list-group-item">
                        <h4><div class="col-md-6">
                            <%= oc.outcome %>
                        </div></h4>

                        <div class="col-md-offset-6">
                            <span class="label label-default lb-sm">4</span>
                            <span class="label label-default lb-md">4</span>
                            <span class="btn label label-warning lb-lg">4</span>
                            <span class="btn label label-info lb-lg">4</span>
                            <span class="label label-default lb-md">4</span>
                            <span class="label label-default lb-sm">4</span>
                        </div> 
                    </li>
                </ul>
            <% end %>
        </div>

        <div class= "col-md-4">
            <p class="text-center inline"><%= link_to "Join Market", join_market_path, class: "btn btn-primary" %></p>

            <h2 class="text-center">Users</h2>
            <% @market.users.each do |user| %>
                <h4 class="text-center">
                    <%= user.firstname %>
                </h3>
            <% end %>
        </div>

    </div>

    <div class="row">
        <div class= "col-md-8">
            <p class="text-center"><%= link_to "Edit Market", edit_market_path, class: "btn btn-warning" %></p>
        </div>
    </div>
</div>

