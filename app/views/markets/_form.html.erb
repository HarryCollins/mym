<div id="error_partial">
    <%= render "shared/errors", obj: @market %>
</div>

<div class= "container">
  <div class="row">
    <div id= "new_market_form" class= "well col-md-8 col-md-offset-2">
      <%= form_for @market, html: { id: "market_form" } do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :description %>
        <%= f.text_field :description %>
        
        <%= f.label 'Market Type' %>
        <%= f.collection_select(:market_type_id, MarketType.all, :id, :mechanism) %> </br></br>
 
        <%= f.label 'Outcomes' %> <i class="glyphicon glyphicon-plus" id="add_outcome"></i>

        <ul class="no-indent no-bullets" id='new_outcomes_input_group'>
        	<%= f.fields_for :market_outcomes do |mo_form| %>

          		<li>
          		    <%= mo_form.check_box '_destroy', class:"delete_checkbox" %>
          			  <%= mo_form.text_field :outcome, html_options={ placeholder:'New Outcome' } %>
          		</li>        			  
    			  
        	<% end %>
        </ul>
        <%= f.label 'Publish market?' %>
        <%= f.check_box :market_status_id, {id: "publish_checkbox"}, "2", "1" %>
        <%= f.submit(@market.new_record? ? 'New Market' : 'Edit Market', class: "btn btn-success") %>
      <% end %>
    </div>
  </div>
</div>

