<%= render 'shared/errors', obj: @user %>

<div class= "col-md-6 col-md-offset-3">

  <div class= "form">

    <h2 class="form-signin-heading">Edit your details</h2> 

      <%= form_for @user do |f| %>

    <div class="form-group">
      <%= f.label :firstname %>
      <%= f.text_field :firstname, class:"form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :secondname %>
        <%= f.text_field :secondname, class:"form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class:"form-control" %>
    </div>
    <div class="form-group">
        <% if @user.new_record? %>
          <%= f.label :password %>
          <%= f.password_field :password, class:"form-control" %>
        <% end %>
    </div>
    
      <div class="row">
        <div class= "col-xs-6">
          <%= f.submit(@user.new_record? ? 'New User' : 'Edit User', class: "btn btn-primary btn-block") %>
        </div>
        <div class= "col-xs-6">
          <%= link_to "Your markets", markets_path(joined: true), class: "btn btn-primary btn-block" %>
        </div>
      </div>
      
      <% end %>
  </div>
</div>