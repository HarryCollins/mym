<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">      
          <%= form_tag '/login', class: "form-signin" do %>
            <h2 class="form-signin-heading">Please sign in</h2>

            <div class="form-group">  
              <%= label_tag :identifier, nil, class: "sr-only" %>
            </div>

            <div class="form-group"> 
              <%= text_field_tag :identifier, nil, class: "form-control", placeholder: 'Username or email', :required => true, :autofocus => true %>
            </div>

            <div class="form-group"> 
              <%= label_tag :password, nil, class: "sr-only" %>
            </div>

            <div class="form-group"> 
              <%= password_field_tag :password, nil, class: "form-control", placeholder: 'Password' , :required => true %>
            </div>

            <div class="form-group"> 
              <%= submit_tag 'Login', class: 'btn btn-lg btn-primary btn-block'%>
            </div>

          </form>
          </br>
          <%= link_to "Not a member yet?", register_path %>
      <% end %>
    </div>
</div>