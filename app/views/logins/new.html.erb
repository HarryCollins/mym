<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">      
          <%= form_tag '/login', class: "form-signin" do %>
            <h2 class="form-signin-heading">Please sign in</h2>
            <%= label_tag :email, nil, class: "sr-only" %>
	          <%= text_field_tag :email, nil, class: "form-control", placeholder: 'Email', :required => true, :autofocus => true %>
      	    <%= label_tag :password, nil, class: "sr-only" %>
      	    <%= password_field_tag :password, nil, class: "form-control", placeholder: 'Password' , :required => true %>
            <%= submit_tag 'Login', class: 'btn btn-lg btn-primary btn-block'%>
          </form>
          </br>
          <%= link_to "Not a member yet?", register_path %>
      <% end %>
    </div>
</div>